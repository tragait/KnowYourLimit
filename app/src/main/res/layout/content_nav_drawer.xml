<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c000c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ericsson.hack.knowyourlimit.NavDrawerActivity"
    tools:showIn="@layout/app_bar_nav_drawer">

    <TextView
        android:id="@+id/editCurrent"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangular_gray"
        android:gravity="center"
        android:text="00"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editLimit"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_toRightOf="@+id/editCurrent"
        android:layout_alignTop="@+id/editCurrent"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rectangular_gray"
        android:gravity="center"
        android:text="00"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/currentSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCurrent"
        android:layout_toStartOf="@+id/nextBtn"
        android:text="Current Speed(km/h)"
        android:textColor="#f4f2e3" />

    <TextView
        android:id="@+id/currentLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLimit"
        android:layout_toEndOf="@+id/nextBtn"
        android:text="Speed Limit(km/h)"
        android:textColor="#f4f2e3" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentSpeed"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/side_nav_bar"
        android:text="Start"
        android:textColor="#0c000c" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:gravity="center"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:textColor="#f4f2e3" />

</RelativeLayout>